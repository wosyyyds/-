        </div>
        
        <div class="game-over" id="game-over"></div>
        
        <div class="controls">
            <button id="start-btn">é‡æ–°å¼€å§‹</button>
        </div>
        
        <div class="instructions">
            <h2>æ¸¸æˆè¯´æ˜:</h2>
            <ul>
                <li>ä½¿ç”¨é”®ç›˜æ–¹å‘é”®ç§»åŠ¨æ–¹å—</li>
                <li>ç›¸åŒæ•°å­—çš„æ–¹å—ç›¸æ’ä¼šåˆå¹¶æˆæ›´å¤§çš„æ•°å­—</li>
                <li>ç›®æ ‡æ˜¯åˆæˆ2048æ–¹å—</li>
                <li>æ— æ³•ç§»åŠ¨æ—¶æ¸¸æˆç»“æŸ</li>
            </ul>
        </div>
    </div>

    <script>
        // æ¸¸æˆå˜é‡
        const scoreElement = document.getElementById('score');
        const highScoreElement = document.getElementById('high-score');
        const startBtn = document.getElementById('start-btn');
        const gameOverElement = document.getElementById('game-over');
        const tilesContainer = document.getElementById('tiles-container');
        
        let grid = [];
        let score = 0;
        let highScore = localStorage.getItem('2048HighScore') || 0;
        let gameOver = false;
        
        // åˆå§‹åŒ–æœ€é«˜åˆ†
        highScoreElement.textContent = highScore;
        
        // åˆå§‹åŒ–æ¸¸æˆ
        function initGame() {
            // æ¸…ç©ºç½‘æ ¼
            grid = Array(4).fill().map(() => Array(4).fill(0));
            score = 0;
            scoreElement.textContent = score;
            gameOverElement.textContent = "";
            gameOver = false;
            
            // æ¸…ç©ºæ–¹å—
            tilesContainer.innerHTML = "";
            
            // æ·»åŠ ä¸¤ä¸ªåˆå§‹æ–¹å—
            addRandomTile();
            addRandomTile();
            
            // æ¸²æŸ“æ¸¸æˆ
            render();
        }
        
        // æ·»åŠ éšæœºæ–¹å—
        function addRandomTile() {
            const emptyCells = [];
            for (let i = 0; i < 4; i++) {
                for (let j = 0; j < 4; j++) {
                    if (grid[i][j] === 0) {
                        emptyCells.push({x: i, y: j});
                    }
                }
            }
            
            if (emptyCells.length > 0) {
                const randomCell = emptyCells[Math.floor(Math.random() * emptyCells.length)];
                grid[randomCell.x][randomCell.y] = Math.random() < 0.9 ? 2 : 4;
                return true;
            }
            return false;
        }
        
        // æ¸²æŸ“æ¸¸æˆ
        function render() {
            // æ¸…ç©ºæ–¹å—å®¹å™¨
            tilesContainer.innerHTML = "";
            
            // æ¸²æŸ“æ¯ä¸ªæ–¹å—
            for (let i = 0; i < 4; i++) {
                for (let j = 0; j < 4; j++) {
                    if (grid[i][j] !== 0) {
                        const tile = document.createElement('div');
                        tile.className = `tile tile-${grid[i][j]}`;
                        tile.textContent = grid[i][j];
                        tile.style.left = (j * 70 + 10) + 'px';
                        tile.style.top = (i * 70 + 10) + 'px';
                        tilesContainer.appendChild(tile);
                    }
                }
            }
        }
        
        // ç§»åŠ¨æ–¹å—
        function move(direction) {
            if (gameOver) return false;
            
            let moved = false;
            let newGrid = JSON.parse(JSON.stringify(grid));
            
            // æ ¹æ®æ–¹å‘ç§»åŠ¨
            switch (direction) {
                case 'up':
                    for (let j = 0; j < 4; j++) {
                        let column = [];
                        for (let i = 0; i < 4; i++) {
                            if (newGrid[i][j] !== 0) {
                                column.push(newGrid[i][j]);
                            }
                        }
                        
                        // åˆå¹¶ç›¸åŒæ•°å­—
                        for (let i = 0; i < column.length - 1; i++) {
                            if (column[i] === column[i + 1]) {
                                column[i] *= 2;
                                score += column[i];
                                column.splice(i + 1, 1);
                            }
                        }
                        
                        // å¡«å……å‰©ä½™ä½ç½®
                        while (column.length < 4) {
                            column.push(0);
                        }
                        
                        // æ›´æ–°ç½‘æ ¼
                        for (let i = 0; i < 4; i++) {
                            newGrid[i][j] = column[i];
                        }
                    }
                    break;
                    
                case 'down':
                    for (let j = 0; j < 4; j++) {
                        let column = [];
                        for (let i = 3; i >= 0; i--) {
                            if (newGrid[i][j] !== 0) {
                                column.push(newGrid[i][j]);
                            }
                        }
                        
                        // åˆå¹¶ç›¸åŒæ•°å­—
                        for (let i = 0; i < column.length - 1; i++) {
                            if (column[i] === column[i + 1]) {
                                column[i] *= 2;
                                score += column[i];
                                column.splice(i + 1, 1);
                            }
                        }
                        
                        // å¡«å……å‰©ä½™ä½ç½®
                        while (column.length < 4) {
                            column.push(0);
                        }
                        
                        // æ›´æ–°ç½‘æ ¼
                        for (let i = 3; i >= 0; i--) {
                            newGrid[i][j] = column[3 - i];
                        }
                    }
                    break;
                    
                case 'left':
                    for (let i = 0; i < 4; i++) {
                        let row = [];
                        for (let j = 0; j < 4; j++) {
                            if (newGrid[i][j] !== 0) {
                                row.push(newGrid[i][j]);
                            }
                        }
                        
                        // åˆå¹¶ç›¸åŒæ•°å­—
                        for (let j = 0; j < row.length - 1; j++) {
                            if (row[j] === row[j + 1]) {
                                row[j] *= 2;
                                score += row[j];
                                row.splice(j + 1, 1);
                            }
                        }
                        
                        // å¡«å……å‰©ä½™ä½ç½®
                        while (row.length < 4) {
                            row.push(0);
                        }
                        
                        // æ›´æ–°ç½‘æ ¼
                        for (let j = 0; j < 4; j++) {
                            newGrid[i][j] = row[j];
                        }
                    }
                    break;
                    
                case 'right':
                    for (let i = 0; i < 4; i++) {
                        let row = [];
                        for (let j = 3; j >= 0; j--) {
                            if (newGrid[i][j] !== 0) {
                                row.push(newGrid[i][j]);
                            }
                        }
                        
                        // åˆå¹¶ç›¸åŒæ•°å­—
                        for (let j = 0; j < row.length - 1; j++) {
                            if (row[j] === row[j + 1]) {
                                row[j] *= 2;
                                score += row[j];
                                row.splice(j + 1, 1);
                            }
                        }
                        
                        // å¡«å……å‰©ä½™ä½ç½®
                        while (row.length < 4) {
                            row.push(0);
                        }
                        
                        // æ›´æ–°ç½‘æ ¼
                        for (let j = 3; j >= 0; j--) {
                            newGrid[i][j] = row[3 - j];
                        }
                    }
                    break;
            }
            
            // æ£€æŸ¥æ˜¯å¦ç§»åŠ¨äº†
            for (let i = 0; i < 4; i++) {
                for (let j = 0; j < 4; j++) {
                    if (grid[i][j] !== newGrid[i][j]) {
                        moved = true;
                        break;
                    }
                }
                if (moved) break;
            }
            
            if (moved) {
                grid = newGrid;
                scoreElement.textContent = score;
                
                // æ·»åŠ æ–°æ–¹å—
                if (!addRandomTile()) {
                    // æ£€æŸ¥æ¸¸æˆæ˜¯å¦ç»“æŸ
                    if (isGameOver()) {
                        gameOver = true;
                        gameOverElement.textContent = "æ¸¸æˆç»“æŸ!";
                        
                        // æ›´æ–°æœ€é«˜åˆ†
                        if (score > highScore) {
                            highScore = score;
                            highScoreElement.textContent = highScore;
                            localStorage.setItem('2048HighScore', highScore);
                        }
                    }
                }
                
                render();
            }
            
            return moved;
        }
        
        // æ£€æŸ¥æ¸¸æˆæ˜¯å¦ç»“æŸ
        function isGameOver() {
            // æ£€æŸ¥æ˜¯å¦æœ‰ç©ºæ ¼å­
            for (let i = 0; i < 4; i++) {
                for (let j = 0; j < 4; j++) {
                    if (grid[i][j] === 0) {
                        return false;
                    }
                }
            }
            
            // æ£€æŸ¥æ˜¯å¦å¯ä»¥åˆå¹¶
            for (let i = 0; i < 4; i++) {
                for (let j = 0; j < 4; j++) {
                    // æ£€æŸ¥å³è¾¹
                    if (j < 3 && grid[i][j] === grid[i][j + 1]) {
                        return false;
                    }
                    // æ£€æŸ¥ä¸‹é¢
                    if (i < 3 && grid[i][j] === grid[i + 1][j]) {
                        return false;
                    }
                }
            }
            
            return true;
        }
        
        // é”®ç›˜æ§åˆ¶
        document.addEventListener('keydown', (e) => {
            switch (e.key) {
                case 'ArrowUp':
                    move('up');
                    e.preventDefault();
                    break;
                case 'ArrowDown':
                    move('down');
                    e.preventDefault();
                    break;
                case 'ArrowLeft':
                    move('left');
                    e.preventDefault();
                    break;
                case 'ArrowRight':
                    move('right');
                    e.preventDefault();
                    break;
            }
        });
        
        // æŒ‰é’®äº‹ä»¶
        startBtn.addEventListener('click', initGame);
        
        // åˆå§‹åŒ–æ¸¸æˆ
        initGame();
    </script>
</body>
